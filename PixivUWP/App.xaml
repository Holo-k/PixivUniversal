    x:Class="PixivUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PixivUWP.Data"
    xmlns:converter="using:PixivUWP.Converter"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ApplicationStartPageBackgroundThemeBrush" Color="#00adee"/>
            <DataTemplate x:Key="StandardTileTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>
            </DataTemplate>
            <converter:IsLikedCvt x:Key="IsLikedCvt"/>
            <DataTemplate x:Key="workitem">
                <Grid Height="Auto" Margin="-10 2 -10 2">
                    <ProgressRing x:Name="pro" IsActive="True" Margin="0 0 0 0"/>
                    <Image Name="img" MinHeight="125" Stretch="UniformToFill" local:TmpData.EnableAutoLoadWorkImg="True"/>
                    <Grid Grid.Row="1" Background="White" Opacity="0.8" VerticalAlignment="Bottom" Height="48">
                        <TextBlock FontSize="12" FontWeight="Bold" Text="{Binding Title}" Margin="5" TextTrimming="WordEllipsis" HorizontalAlignment="Left"/>
                    </Grid>
                    <StackPanel Visibility="Collapsed" Orientation="Vertical" Height="Auto" VerticalAlignment="Center" Margin="16 0 0 0" Width="135">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="12" Text="{Binding Width}"/>
                            <TextBlock FontSize="12" Text="×"/>
                            <TextBlock FontSize="12" Text="{Binding Height}"/>
                        </StackPanel>
                        <TextBlock FontSize="12" Text="{Binding User.Name}" Width="125" TextTrimming="WordEllipsis" HorizontalAlignment="Left"/>
                        <TextBlock FontSize="16"/>
                        <Grid Background="Transparent" HorizontalAlignment="Right" Width="60">
                            <ContentPresenter HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock FontFamily="{ThemeResource SymbolThemeFontFamily}" Text="{Binding is_bookmarked,Converter={StaticResource IsLikedCvt}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                    <TextBlock FontSize="12" Text="{Binding total_bookmarks}" HorizontalAlignment="Center" Width="32"/>
                                </StackPanel>
                            </ContentPresenter>
                        </Grid>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <Style x:Key="StretchListViewItem" TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
            <Style x:Key="workitemstyle" TargetType="ListView">
                <Setter Property="ItemContainerStyle" Value="{StaticResource StretchListViewItem}"/>
                <Setter Property="ItemTemplate" Value="{StaticResource workitem}"/>
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
